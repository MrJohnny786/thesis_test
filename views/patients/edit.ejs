<%- include('../partials/header')-%>


    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/patients/<%= p_id %>">Πισω</a></li>
        </ol>
    </nav>


    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1 class="text-center display-4 my-4">Επεξεργασία
                    <%= patient.lastName %>
                </h1>

                <form action="/patients/<%= patient._id %>?_method=PUT" method="POST">



                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Όνομα :</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="patient[firstName]" id="colFormLabel" value="<%= patient.firstName %>" required minlength="1" maxlength="20">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Επώνυμο :</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="patient[lastName]" id="colFormLabel" value="<%= patient.lastName %>" required minlength="1" maxlength="20">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Πατρωνυμο :</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="patient[patronym]" id="colFormLabel" value="<%= patient.patronym %>" required minlength="1" maxlength="20">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">AM :</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="patient[patientAM]" id="colFormLabel" value="<%= patient.patientAM %>" required minlength="1" maxlength="20">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" for="birthday">Ημερομηνία Γέννησης:</label>
                        <div class="col-sm-5">
                            <input type="date" class="form-control" id="patientBirthday" name="patient[birthday]" value="<%= moment(patient.birthday).format('YYYY-MM-DD') %>">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Κινητο Τηλεφωνο :</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control" name="patient[mPhone]" id="colFormLabel" value="<%= patient.mPhone %>" required  minlength="10">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Υψος :</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control" name="patient[height]" id="colFormLabel" value="<%= patient.height %>">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Βαρος :</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control" name="patient[weight]" id="colFormLabel" value="<%= patient.weight %>">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Πολη/Χωριο :</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="patient[city]" id="colFormLabel" value="<%= patient.city %>" required maxlength="50">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Διευθυνση :</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="patient[address]" id="colFormLabel" value="<%= patient.address %>" required maxlength="50">
                        </div>
                    </div>



                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Ομαδα Αιματος :</label>
                        <div class="col-sm-5">
                            <select class="btn btn-secondary dropdown-toggle" class="bloodType" data-style="btn-info" name="patient[bloodType]">
                <optgroup label="Select Table">
                  <option name="<%= patient.bloodType %>" value="<%= patient.bloodType %>">
                    <%= patient.bloodType %>
                  </option>
                  <option name="-" value="-">-</option>
                  <option name="Α+" value="Α+">Α+</option>
                  <option name="0+" value="0+">0+</option>
                  <option name="Β+" value="Β+">Β+</option>
                  <option name="ΑΒ+" value="ΑΒ+">ΑΒ+</option>
                  <option name="Α-" value="Α-">Α-</option>
                  <option name="0-" value="0-">0-</option>
                  <option name="Β-" value="Β-">Β-</option>
                  <option name="ΑΒ-" value="ΑΒ-">ΑΒ-</option>
                </optgroup>
              </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Γιατρος :</label>
                        <div class="col-sm-5">
                            <select class="btn btn-secondary dropdown-toggle" class="doc" data-style="btn-info" name="patient[doc]">
                <optgroup label="Select Table">
                  <option name="<%= patient.doc %>" value="<%= patient.doc %>">
                    <%= patient.doc %>
                  </option>
                  <option name="-" value="-">-</option>
                  <% for(var i=0; i<doctors.length; i++) {%>
                    <% fullname = doctors[i].surname +' '+ doctors[i].name %>
                    <option name="doctor" value=" <%= fullname%> "><%= fullname%></option>
                <% } %>
                </optgroup>
              </select>
                        </div>
                    </div>




                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" for="exampleTextarea">Γενικές σημειώσεις :</label>
                        <div>
                            <textarea class="form-control" name="patient[general]" id="exampleTextarea" cols="200" rows="10"><%= patient.general %></textarea>
                        </div>
                    </div>
                    <div class="col-md-8 text-center">
                        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </div>

                </form>

            </div>


        </div>
    </div>

    <%- include('../partials/footer') -%>
