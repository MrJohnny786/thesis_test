    <script>
        jQuery(document).ready(function($) {
            $(".clickable-row").click(function() {
                window.location = $(this).data("href");
            });
            $('.clickable-row').hover(function() {
                    $(this).addClass('hoveri');
                },
                function() {
                    $(this).removeClass('hoveri');
                });
        });
    </script>


