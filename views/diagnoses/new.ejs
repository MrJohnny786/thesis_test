<%- include('../partials/header') -%>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a ><button type="button" onclick="history.go(-1)"" class="btn btn-info">Πίσω</button></a></li>
        </ol>
    </nav>


    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1 class="text-center display-4 my-4">Ανοσοθεραπεία </h1>

                <form action="/patients/<%= patient._id %>/diagnoses" method="POST">

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" for="colFormLabel">Ημερομηνία Ανοσοθεραπείας :</label>
                        <div class="col-sm-5">
                            <input type="date" class="form-control" id="patientBirthday" name="diagnose[date]" placeholder="Ημερομηνία Διάγνωσης" >
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">ΦΑΡΜΑΚΑ (ΟΔΗΓΙΕΣ - ΟΔΗΓΙΕΣ ΧΟΡΗΓΗΣΕΩΣ) :</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="diagnose[courseOfTreatment]" id="colFormLabel" placeholder="ΦΑΡΜΑΚΑ (ΟΔΗΓΙΕΣ - ΟΔΗΓΙΕΣ ΧΟΡΗΓΗΣΕΩΣ)" required minlength="1" maxlength="100">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Γιατρος :</label>
                        <div class="col-sm-5">
                            <select class="btn btn-secondary dropdown-toggle" class="doc" data-style="btn-info" name="diagnose[doc]">
            <optgroup label="Select Table">
                <% for(var i=0; i<doctors.length; i++) {%>
                    <% fullname = doctors[i].surname +' '+ doctors[i].name %>
                    <option name="doctor" value=" <%= fullname%> "><%= fullname%></option>
                <% } %>
            </optgroup>
          </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label" for="exampleTextarea">Γενικές σημειώσεις :</label>
                        <div>
                            <textarea class="form-control" name="diagnose[general]" id="exampleTextarea" cols="200" rows="10"></textarea>
                        </div>
                    </div>

                    <!-- <div class="form-group row">
                        <label class="col-sm-4 col-form-label" for="colFormLabel">Ημερομηνία Ληξης Διαγνωσης :</label>
                        <div class="col-sm-5">
                            <input type="date" class="form-control" id="colFormLabel" name="diagnose[endDate]" placeholder="Ημερομηνία Ληξης Διαγνωσης">
                        </div>
                    </div> -->

                    <div class="col-md-8 text-center">
                        <button class="btn btn-primary btn-lg">Υποβολή!</button>
                    </div>

                </form>

            </div>


        </div>
    </div>

    <%- include('../partials/footer') -%>
