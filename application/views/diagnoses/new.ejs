<% include ../partials/header %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/patients/<%= patient._id %>">Πισω</a></li>
  </ol>
</nav>


<div class= "container">
    <div class="row">
      <div class="col-sm">
        <h1 class="text-center display-4 my-4">Διάγνωση  </h1>
        
        <form action = "/patients/<%= patient._id %>/diagnoses"  method ="POST">
 
          <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="colFormLabel">Ημερομηνία Διάγνωσης :</label>
            <div class="col-sm-5">
              <input type="date" class="form-control" id="colFormLabel" name="diagnose[date]" placeholder="Ημερομηνία Διάγνωσης">
            </div>
          </div> 
          
          <div class="form-group row">
            <label for="colFormLabel" class="col-sm-4 col-form-label">Πάθηση :</label>
            <div class="col-sm-5">
              <input type="text" class="form-control" name = "diagnose[disease]" id="colFormLabel" placeholder="Πάθηση" required minlength="1" maxlength="100">
            </div>
          </div>
          
          <div class="form-group row">
          <label for="colFormLabel" class="col-sm-4 col-form-label">Γιατρος :</label>
          <div class="col-sm-5">
              <select class="btn btn-secondary dropdown-toggle" class="doc" data-style="btn-info" name="diagnose[doc]">
                <optgroup label="Select Table">
                  <option name="-" value="-">-</option>
                  <option name="Γεωργιαδη" value="Γεωργιαδη">Γεωργιαδη</option>
                  <option name="Αλεφραγκης" value="Αλεφραγκης">Αλεφραγκης</option>
                  <option name="Ζαχαρακης" value="Ζαχαρακης">Ζαχαρακης</option>
                </optgroup>
              </select>
          </div>
        </div>
          
          <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="exampleTextarea">Γενικές σημειώσεις :</label>
            <div>
              <textarea class="form-control" name = "diagnose[general]" id="exampleTextarea" cols="200" rows="10"></textarea>
            </div>
          </div>
          <div class="col-md-8 text-center">
              <button class="btn btn-primary btn-lg">Υποβολή!</button>
          </div>

        </form>
        
      </div>
    
    
    </div>
</div>

<% include ../partials/footer %>