<% include ../partials/header %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/patients/<%= patient_id %>/diagnoses/<%= diagnose._id%>">Πισω</a></li>
  </ol>
</nav>


<div class= "container">
    <div class="row">
      <div class="col-sm">
        <h1 class="text-center display-4 my-4">Θεραπεία  </h1>
        
        <form action = "/patients/<%= patient_id %>/diagnoses/<%= diagnose._id %>/treatments"  method ="POST">
      
          
          
          <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="colFormLabel">Ημερομηνία Θεραπείας :</label>
            <div class="col-sm-5">
              <input type="date" class="form-control" id="colFormLabel" name="treatment[date]" placeholder="Ημερομηνία Θεραπείας">
            </div>
          </div>
          
          <div class="form-group row">
          <label for="colFormLabel" class="col-sm-4 col-form-label">Γιατρος :</label>
          <div class="col-sm-5">
              <select class="btn btn-secondary dropdown-toggle" class="doc" data-style="btn-info" name="treatment[doc]">
                <optgroup label="Select Table">
                  <option name="-" value="-">-</option>
                  <option name="Γεωργιαδη" value="Γεωργιαδη">Γεωργιαδη</option>
                  <option name="Αλεφραγκης" value="Αλεφραγκης">Αλεφραγκης</option>
                  <option name="Ζαχαρακης" value="Ζαχαρακης">Ζαχαρακης</option>
                </optgroup>
              </select>
          </div>
        </div>
        
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="exampleTextarea">Γενικές σημειώσεις :</label>
            <div>
              <textarea class="form-control" name = "treatment[general]" id="exampleTextarea" cols="200" rows="10"></textarea>
            </div>
          </div>
        
          
          <div class="col-md-8 text-center">
              <button class="btn btn-primary btn-lg">Υποβολή!</button>
          </div>
          
          </div>
        

        </form>
        
      </div>
    
    
    </div>
</div>

<% include ../partials/footer %>